<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="main">
        <div class="signup_background"></div>
        <div class="container mt-3">
            <div class="row">
                <% if(errorMessage) { %>
                    <div class="user-message user-message--error"><%= errorMessage %></div>
                <% } %>
            </div>
            <div class="row">
                <div class="d-flex justify-content-center">
                  <div class="form-action mt-3">
                    <div class="text-center py-3 my-2">
                      <h1 class="title">Update New Password</h1>
                      <p class="text-white">Please enter your new password, <%= username %></p>
                    </div>
                    <form action="/new-password" method="POST" class="d-flex flex-column justify-content-center" novalidate>
                      <div class="mb-4 px-4">
                        <label for="password" class="form-label text-white">New Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="">
                      </div>
                        <input type="hidden" name="userId" value="<%= userId %>">
                        <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                      <button type="submit" class="my_btn border text-white mb-4 align-self-center">Update</button>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>