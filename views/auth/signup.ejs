<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/public/css/form.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="main">
      <div class="signup_background"></div>v
      <div class="container">
       <div class="row">
        <% if(errorMessage) { %>
          <div class="alert alert-danger alert-dismissible fade show flash-message" role="alert">
            <h4><%= errorMessage %></h4>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
       </div>
         <div class="row">
           <div class="d-flex justify-content-center">
             <div class="form-action mt-3">
               <div class="text-center py-2">
                 <h1 class="title">Register</h1>
                 <p class="text-white">Please enter your username, email and password</p>
               </div>
               <form action="/signup" method="POST" class="d-flex flex-column justify-content-center" novalidate>
                <div class="mb-3 px-3">
                  <label for="username" class="form-label text-white">Username</label>
                  <input type="text" class="form-control <%= validationErrors.find(e => e.path === 'username') ? 'invalid' : '' %>" name="username" id="username" placeholder="Johan" value="<%= oldInput.username %>">
                </div>
                 <div class="mb-3 px-3">
                   <label for="email" class="form-label text-white">Email address</label>
                   <input type="email" class="form-control <%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>" name="email" id="email" placeholder="anteiku@coffee.com" value="<%= oldInput.email %>">
                 </div>
                 <div class="mb-3 px-3">
                   <label for="password" class="form-label text-white">Password</label>
                   <input type="password" class="form-control <%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>" name="password" id="password" placeholder="Passwords must be at least 6 characters" value="<%= oldInput.password %>">
                 </div>
                 <div class="mb-3 px-3">
                  <label for="confirmPassword" class="form-label text-white">confirmPassword</label>
                  <input type="password" class="form-control <%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>" name="confirmPassword" id="confirmPassword" placeholder="Please re-enter the password above" value="<%= oldInput.confirmPassword %>">
                </div>
                 <button type="submit" class="my_btn border text-white my-3 align-self-center">Register</button>
               </form>
         </div>
           </div>
      </div>
 </main>
<%- include('../includes/end.ejs') %>