<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <section class="gradient-custom">
            <div class="container py-5 h-100">
              <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                  <div class="card text-white" style="background-color: #4b2523;">
                    <div class="card-body p-5 text-center">
                      <div>
                        <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                        <p class="text-white-50 mb-3">Please enter your login and password!</p>
                        <form action="/login" method="POST">
                            <div data-mdb-input-init class="form-outline form-white mb-4">
                            <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="example@mail.com" />
                            <label class="form-label" for="email">Email</label>
                            </div>
            
                            <div data-mdb-input-init class="form-outline form-white mb-4">
                            <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="*******"/>
                            <label class="form-label" for="password">Password</label>
                            </div>
            
                            <p class="small pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>
            
                            
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                        </form>
          
                      </div>
          
                      <div>
                        <p class="mt-2">Don't have an account? <a href="/signup" class="text-white-50 fw-bold">Sign Up</a>
                        </p>
                      </div>
          
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
    </main>
<%- include('../includes/end.ejs') %>