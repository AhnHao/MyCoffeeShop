<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/public/css/form.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="main">
        <div class="addProduct_background"></div>
        <div class="container">
            <div class="row">
            <% if(errorMessage) { %>
                <div class="user-message user-message--error mt-3"><%= errorMessage %></div>
            <% } %>
            </div>
            <div class="row">
                <div class="d-flex justify-content-center">
                    <div class="form-action mt-3">
                        <div class="text-center py-2 my-2">
                            <h1 class="title">Add New Product</h1>
                        </div>
                        <form action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST" class="d-flex flex-column justify-content-center" enctype="multipart/form-data">
                        <div class="mb-2 px-2">
                            <label for="title" class="form-label text-white">Title</label>
                            <input type="text" class="form-control <%= validationErrors.find(e => e.path === 'title') ? 'invalid' : '' %>" name="title" id="title" value="<% if(editing || hasError) { %><%= product.title %><% } %>">
                        </div>
                        <div class="mb-2 px-2">
                            <label for="image" class="form-label text-white">Image</label>
                            <input type="file" class="form-control" name="image" id="image">
                        </div>
                        <div class="mb-2 px-2">
                            <label for="price" class="form-label text-white">Price</label>
                            <input type="number" min="0" class="form-control <%= validationErrors.find(e => e.path === 'price') ? 'invalid' : '' %>" name="price" id="price" value="<% if(editing || hasError) { %><%= product.price %><% } %>">
                        </div>
                        <div class="mb-2 px-2">
                            <label for="description" class="form-label text-white">Description</label>
                            <textarea class="form-control <%= validationErrors.find(e => e.path === 'description') ? 'invalid' : '' %>" name="description" id="description" rows="3"><% if(editing || hasError) { %><%= product.description %><% } %></textarea>
                        </div>
                        <% if (editing) { %>
                            <input type="hidden" value="<%= product._id %>" name="productId">
                        <% } %>

                        <button type="submit" class="my_btn border text-white mb-4 align-self-center"><% if(editing) { %>Update<% } else { %>Add Product<% } %></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>