    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="main">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <div class="product__image">
                            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="product_info">
                            <h1><%= product.title %></h1>
                            <h2><%= product.price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></h2>
                            <p><%= product.description %></p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
<%- include('../includes/end.ejs') %>