<%- include('../includes/head.ejs') %>
</head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="main">
            <% if(products.length > 0) { %>
                <div class="container">
                    <div class="row">
                        <% for(let product of products) {%>
                            <div class="col">
                                <div class="card border border-dark-subtle position-relative" style="width: 15rem; height: 25rem;">
                                    <img src="<%= product.imageUrl %>" class="card-img-top product-img" alt="<%= product.title %>">
                                    <div class="card-body">
                                      <h5 class="card-title"><%= product.title %></h5>
                                      <h2 class="card-title"><%= product.price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></h2>
                                      <p class="card-text"><%= product.description %></p>
                                      <div class="d-flex position-absolute" style="bottom: 1rem;">
                                        <a href="/menu/<%= product._id %>" class="btn btn-primary me-4">Details</a>
                                        <form action="/cart" method="POST">
                                            <input type="hidden" name="productId" value="<%= product._id %>">
                                            <button class="btn btn-primary" type="submit">Add to Cart</button>
                                        </form>
                                      </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </main>
<%- include('../includes/end.ejs') %>
